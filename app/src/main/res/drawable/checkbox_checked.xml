<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 테두리 (stroke) -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- 투명한 배경 -->
            <stroke android:width="2dp" android:color="@color/gray"/> <!-- 회색 테두리 -->
            <corners android:radius="4dp"/> <!-- 모서리 둥글게 -->
        </shape>
    </item>

    <!-- 여백과 내부 색상 -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@color/gray"/> <!-- 내부 색상 -->
            <corners android:radius="4dp"/> <!-- 모서리 둥글게 -->
        </shape>
    </item>

</layer-list>
